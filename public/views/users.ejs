<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>BURGERCIM </title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet"/>
  <link rel="stylesheet" href="../css/users-style.css" />
</head>
<body>


     <!-- Sepet Ekranı -->

   <div class="off-screen-sepet">

      
        <div class = "sepet-baslik-kutusu">
          <h1>SEPET</h1>
        </div>

        <div class="sepet-icerik-kutusu">

          <!-- <div class="sepet-icerikler">
            <div class="sepet-urun-resim"><img src="Images/cheeseburger.png" alt=""></div>
            <div class="sepet-urun-bilgiler">
              <div class="sepet-urun-isim"><p>Cheeseburger</p></div>
              <div class="sepet-urun-altbilgi">
                <div class="sepet-urun-adet">
                  <button class="urun-adet-buton-eksi">-</button>
                  <div class="urun-adet-sayi"><p>2 Adet</p></div>
                  <button class="urun-adet-buton-arti">+</button>
                </div>
                <div class="sepet-urun-fiyat"><p>450 TL</p></div>
              </div>
            </div>
          </div> -->

          
        </div>

        <div class="sepet-onay-kutusu">
          <div class="sepet-onay-tutar"><p>Toplam Tutar : 0 ₺</p></div>
          <div class="sepet-butonlar">
            <div><button class="sepet-bosalt-buton">Sepeti Boşalt</button></div>
            <div><button class="sepet-siparis-buton">Sipariş Ver</button></div>
          </div>
        </div>
      
    
   </div>

   <!-- Sepet Bildirim Modal -->
    <div id="siparisModal" class="modal">
      <div class="modal-content">
        <p id="modalMesaj"></p>
        <button id="modalKapat">Tamam</button>
      </div>
    </div>

  <!-- Navbar -->
  <div class="navbar">
    <div><h1>BURGERCIM</h1></div>

    <div class="wifi-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12.55a11 11 0 0 1 14.08 0"></path>
            <path d="M1.42 9a16 16 0 0 1 21.16 0"></path>
            <path d="M8.53 16.11a6 6 0 0 1 6.95 0"></path>
            <line x1="12" y1="20" x2="12.01" y2="20"></line>
        </svg>
    </div>

    <img src="https://cdn-icons-png.flaticon.com/512/34/34568.png" alt="Sepet" class="cart-icon"/>
  </div>

<!-- WiFi Modalı -->
<div id="wifiModal" class="wifi-modal">
    <div class="wifi-modal-content">
        <span class="wifi-close-modal">&times;</span>
        <h2>WiFi Bilgileri</h2>
        <div class="wifi-info">
            <div class="wifi-field">
                <label>WiFi Adı (SSID):</label>
                <div class="wifi-copy-field">
                    <input type="text" id="wifiSsid" value="<%= wifi.ssid %>" readonly>
                    <button class="wifi-copy-btn" data-target="wifiSsid">Kopyala</button>
                </div>
            </div>
            <div class="wifi-field">
                <label>Şifre:</label>
                <div class="wifi-copy-field">
                    <input type="password" id="wifiPassword" value="<%= wifi.password %>" readonly>
                    <div class="wifi-butons">
                        <button class="wifi-copy-btn" data-target="wifiPassword">Kopyala</button>
                        <button id="wifiShowPasswordBtn" class="wifi-show-password">Göster</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

  <!-- Menü -->
  <div class="menu-section">
    <!-- Hamburgerler -->
    <h2 class="section-title">Hamburgerler</h2>
      <div class="menu-items">
        <% hamburgerler.forEach(function(urun) { %>
        <div class="menu-item" data-id="<%= urun.urunid %>">
          <img src="Images/<%= urun.resim %>" alt="Burger">
          <p><%= urun.urunAd %></p>
          <p class="price"><%= urun.fiyat %> ₺</p>
          <button class="sepete-ekle-buton">Sepete Ekle</button>
        </div> 
        <% }) %>
    </div>
    

    <!-- Kızartmalar -->
    <h2 class="section-title">Kızartmalar</h2>
    <div class="menu-items">
        <% kizartmalar.forEach(function(urun) { %>
        <div class="menu-item" data-id="<%= urun.urunid %>">
          <img src="Images/<%= urun.resim %>" alt="Kızartma">
          <p><%= urun.urunAd %></p>
          <p class="price"><%= urun.fiyat %> ₺</p>
          <button class="sepete-ekle-buton">Sepete Ekle</button>
        </div>
        <% }) %>
    </div>
    

    <!-- İçecekler -->
    <h2 class="section-title">İçecekler</h2>
    <div class="menu-items" >
        <% icecekler.forEach(function(urun) { %>
        <div class="menu-item" data-id="<%= urun.urunid %>">
          <img src="Images/<%= urun.resim %>" alt="İçecek">
          <p><%= urun.urunAd %></p>
          <p class="price"><%= urun.fiyat %> ₺</p>
          <button class="sepete-ekle-buton">Sepete Ekle</button>
        </div>
        <% }) %>
    </div>
    
  </div>

  
   <script src="../js/users.js"></script>
</body>
</html>
