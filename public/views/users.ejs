        </div>

        <div class="sepet-onay-kutusu">
          <div class="sepet-onay-tutar"><p>Toplam Tutar : 0 TL</p></div>
          <div class="sepet-butonlar">
            <div><button class="sepet-bosalt-buton">Sepeti Boşalt</button></div>
            <div><button class="sepet-siparis-buton">Sipariş Ver</button></div>
          </div>
        </div>
      
    
   </div>

  <!-- Navbar -->
  <div class="navbar">
    <h1>BURGERCIM</h1>
    <img src="https://cdn-icons-png.flaticon.com/512/34/34568.png" alt="Sepet" class="cart-icon"/>
  </div>



  <!-- Menü -->
  <div class="menu-section">
    <!-- Hamburgerler -->
    <h2 class="section-title">Hamburgerler</h2>
      <div class="menu-items">
        <% hamburgerler.forEach(function(urun) { %>
        <div class="menu-item" data-id="<%= urun.urunid %>">
          <img src="Images/<%= urun.resim %>" alt="Burger">
          <p><%= urun.urunAd %></p>
          <p class="price"><%= urun.fiyat %> TL</p>
          <button class="sepete-ekle-buton">Sepete Ekle</button>
        </div> 
        <% }) %>
    </div>
    

    <!-- Kızartmalar -->
    <h2 class="section-title">Kızartmalar</h2>
    <div class="menu-items">
        <% kizartmalar.forEach(function(urun) { %>
        <div class="menu-item" data-id="<%= urun.urunid %>">
          <img src="Images/<%= urun.resim %>" alt="Kızartma">
          <p><%= urun.urunAd %></p>
          <p class="price"><%= urun.fiyat %> TL</p>
          <button class="sepete-ekle-buton">Sepete Ekle</button>
        </div>
        <% }) %>
    </div>
    

    <!-- İçecekler -->
    <h2 class="section-title">İçecekler</h2>
    <div class="menu-items" >
        <% icecekler.forEach(function(urun) { %>
        <div class="menu-item" data-id="<%= urun.urunid %>">
          <img src="Images/<%= urun.resim %>" alt="İçecek">
          <p><%= urun.urunAd %></p>
          <p class="price"><%= urun.fiyat %> TL</p>
          <button class="sepete-ekle-buton">Sepete Ekle</button>
        </div>
        <% }) %>
    </div>
    
  </div>

  
   <script src="../js/users.js"></script>
</body>
